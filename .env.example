# ðŸš€ Zero To Hero - Environment Variables Template
# Copy this file to .env and fill in your values

# ============== REQUIRED ==============
# Generate a secure secret key: python -c "import secrets; print(secrets.token_urlsafe(50))"
DJANGO_SECRET_KEY=your-secret-key-here

# ============== DEPLOYMENT SETTINGS ==============
DEBUG=False
USE_SQLITE=False

# For Render deployment - will be auto-filled by Render
RENDER_EXTERNAL_HOSTNAME=your-app-name.onrender.com

# For Railway deployment - will be auto-filled by Railway
# RAILWAY_PUBLIC_DOMAIN=your-app-name.railway.app

# ============== DATABASE (Optional - for PostgreSQL) ==============
# DATABASE_URL=postgres://username:password@host:5432/dbname

# ============== EMAIL SETTINGS (Optional) ==============
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# ============== PAYMENT GATEWAY - RAZORPAY (Optional) ==============
RAZORPAY_KEY_ID=rzp_test_your_key_here
RAZORPAY_KEY_SECRET=your_razorpay_secret

# ============== PAYMENT GATEWAY - STRIPE (Optional) ==============
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ============== GOOGLE ANALYTICS (Optional) ==============
GA_TRACKING_ID=GA-XXXXXXXXX-X
